{
  "extends": ["next/core-web-vitals", "prettier"],
  "rules": {
    // Allow unescaped special characters
    "react/no-unescaped-entities": 0,
    // Enforce proper import order
    "import/order": [
      2,
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "type",
          "parent",
          "sibling",
          "index",
          "object"
        ],
        "newlines-between": "always"
      }
    ]
  }
}
